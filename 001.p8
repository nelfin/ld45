function _init()
	gravity = 0.1
	px = 64
	py = 64
	psprite = 1
	flash = {}
	flash.x = 0
	flash.y = 0
	flash.t = 0
	flash.duration = 20
	flash.fade = 15
end

function _update60()
	apply_environment()
	move_cursor()
end

function _draw()
	cls()
	draw_effects()
	draw_cursor()
end

